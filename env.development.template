# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/user-service-db?retryWrites=true&w=majority&appName=AppName

# Profile-Service MongoDB Connection (for migration)
PROFILE_SERVICE_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/profile-service-db?retryWrites=true&w=majority&appName=AppName

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Refresh Token Configuration
ROTATE_REFRESH_TOKEN=false

# Server
PORT=3000
NODE_ENV=development

# Azure AD (Entra ID) Configuration
AZURE_AD_TENANT_ID=your_tenant_id_here
AZURE_AD_CLIENT_ID=your_client_id_here
AZURE_AD_CLIENT_SECRET=your_client_secret_here
AZURE_AD_REDIRECT_URI=http://localhost:3000

# Azure AD B2C Configuration
MS_TENANT_NAME=your_tenant_name_here
MS_POLICY=your_policy_name_here
MS_CLIENT_ID=your_b2c_client_id_here
MS_REDIRECT_URI=http://localhost:3000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Policy Service Configuration
POLICY_SERVICE_URL=http://localhost:3000
POLICY_TIMEOUT=5000
POLICY_RETRIES=3
POLICY_CACHE_TIMEOUT=300000
POLICY_CACHE_TTL=300

# /me Endpoint Configuration
ME_CACHE_TTL=300
POLICY_VERSION=1

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001