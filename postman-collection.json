        {
          "name": "Azure AD - CRM Login (GET Redirect)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/azure-crm?code=authorization_code_from_azure&state=state_value",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "azure-crm"],
              "query": [
                {
                  "key": "code",
                  "value": "authorization_code_from_azure",
                  "description": "Authorization code from Azure AD redirect"
                },
                {
                  "key": "state",
                  "value": "state_value",
                  "description": "State parameter from Azure AD"
                }
              ]
            },
            "description": "This endpoint handles Azure AD redirects. Use POST /auth/azure-crm for actual authentication."
          }
        },
        {
          "name": "Azure AD - CRM Login (POST Callback)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"authorization_code_from_azure\",\n  \"codeVerifier\": \"pkce_code_verifier_from_client\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/azure-crm",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "azure-crm"]
            },
            "description": "Exchange Azure AD authorization code for JWT token. Requires PKCE code verifier."
          }
        },
